<div id="slideshow">
    <div class="slider-wrapper theme-default">
        <div id="slider" class="nivoSlider">
            @{
                if (this.Model.HasValue("slideImatges"))
                {
                    foreach (dynamic imatge in this.Model.Descendants("ImatgePortada"))
                    {
                        <a href="@this.Model.NodeById(@imatge.linkImatge).Url">
                            <img src="@imatge.imatgeSlide.mediaItem[0].Image.umbracoFile" data-thumb="@imatge.imatgeSlide.mediaItem[0].Image.umbracoFile" 
                            alt="@imatge.titolImatge @this.Dictionary.keywords"/>
                        </a>
                    }
                }

            }
        </div>
        <div id="htmlcaption" class="nivo-html-caption">
            <strong>This</strong> is an example of a <em>HTML</em> caption with <a href="#">a link</a>.
        </div>
    </div>
